{
  "tasks": {
    "test": "deno test --allow-net tests/**/*",
    "coverage:generate": "deno test --allow-net --coverage tests/**/*",
    "coverage:report": "deno coverage --exclude=tests"
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "semiColons": false
  },
  "imports": {
    "assert": "https://deno.land/std@0.224.0/assert/mod.ts",
    "mock": "https://deno.land/std@0.224.0/testing/mock.ts"
  }
}